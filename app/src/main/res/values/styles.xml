<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImage" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="buttonFollow" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:checkable" >true</item>
        <item name="android:textColor">@color/slr_button_follow_text</item>
        <item name="backgroundTint">@color/slr_button_follow_background</item>
    </style>

    <style name="Widget.ParentingHub.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.ParentingHub.TextInputLayout.FilledBox
        </item>
        <item name="hintTextColor">@color/primary50</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/grey</item>
        <item name="boxStrokeWidth">@dimen/zero_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/zero_dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/TextAppearance.Validation</item>
        <item name="errorTextColor">@color/error30</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.Caption</item>
        <item name="passwordToggleTint">@color/grey</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.Body2</item>
        <item name="placeholderTextColor">@color/primary50</item>
        <item name="suffixTextAppearance">@style/TextAppearance.Validation</item>
        <item name="suffixTextColor">@color/primary50</item>
    </style>

    <style name="ThemeOverlay.ParentingHub.TextInputLayout.FilledBox" parent="">
        <item name="editTextStyle">@style/Widget.ParentingHub.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.ParentingHub.TextInputEditText.FilledBox" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/slr_outline_button_border</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.ParentingHub.ActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="Widget.ParentingHub.Search.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.ParentingHub.Search.TextInputLayout.OutlinedBox
        </item>
        <item name="hintTextColor">@color/grey</item>
        <item name="boxBackgroundColor">@color/shimmer_color</item>
        <item name="strokeColor">@color/grey</item>
        <item name="boxStrokeWidth">@dimen/zero_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/zero_dp</item>
        <item name="errorEnabled">false</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.Body2</item>
        <item name="placeholderTextColor">@color/grey</item>
        <item name="suffixTextAppearance">@style/TextAppearance.Body2</item>
        <item name="suffixTextColor">@color/primary50</item>
    </style>

    <style name="ThemeOverlay.ParentingHub.Search.TextInputLayout.OutlinedBox" parent="">
        <item name="editTextStyle">@style/Widget.ParentingHub.Search.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Widget.ParentingHub.Search.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/slr_outline_search_view_border</item>
        <item name="android:textAppearance">@style/TextAppearance.Body2</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>