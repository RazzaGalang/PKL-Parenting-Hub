<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProf"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/style_rounded"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_prof"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImage"
        app:strokeWidth="3dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:text="Razza Galang Adzan"
        android:textColor="#1C1B1F"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/ivProf"
        app:layout_constraintTop_toTopOf="@+id/ivProf"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivDefault"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_default"
        android:layout_marginHorizontal="@dimen/screen_margin"
        app:layout_constraintTop_toTopOf="@id/ivProf"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDesc"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="@string/desc_art"
        android:textColor="#1C1B1F"
        android:gravity="start"
        app:fontFamily="@font/roboto_bold"
        android:textSize="15dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUser"
        app:layout_constraintEnd_toStartOf="@id/ivDefault"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icLike"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_like"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="178 Suka"
        app:fontFamily="@font/roboto_regular"
        android:textColor="#A9A9A9"
        android:textSize="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/icLike"
        app:layout_constraintStart_toStartOf="@id/icLike"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Agustus 2021"
        android:textColor="#A9A9A9"
        app:fontFamily="@font/roboto_regular"
        android:textSize="10dp"
        android:layout_marginHorizontal="110dp"
        app:layout_constraintTop_toTopOf="@id/icLike"
        app:layout_constraintEnd_toEndOf="@id/ivDefault"/>

</androidx.constraintlayout.widget.ConstraintLayout>