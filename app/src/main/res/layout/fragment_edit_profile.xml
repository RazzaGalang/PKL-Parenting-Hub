<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentEditProfile">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary30">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icBack"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="20sp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="@id/icBack"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_banner"
        app:layout_constraintTop_toBottomOf="@id/cvToolBar"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivEditBanner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="@+id/ivBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvToolBar" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_profile"
        android:background="@drawable/style_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBanner"
        android:layout_marginTop="86dp"
        android:layout_marginHorizontal="@dimen/screen_margin"
        app:shapeAppearanceOverlay="@style/circleImage"
        android:scaleType="centerCrop"
        app:strokeWidth="3dp"
        android:padding="3dp"
        app:strokeColor="@color/white"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivEditProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_image"
        android:layout_marginStart="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBanner" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNamaEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        app:layout_constraintStart_toStartOf="@id/ivProfile"/>

    <EditText
        android:id="@+id/etNameEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@id/tvNamaEditProfil"
        app:layout_constraintStart_toStartOf="@id/tvNamaEditProfil"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvUserEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pengguna"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/etNameEditProfile"
        app:layout_constraintStart_toStartOf="@id/ivProfile"/>

    <EditText
        android:id="@+id/etUsernameEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@id/tvUserEditProfil"
        app:layout_constraintStart_toStartOf="@id/tvNamaEditProfil"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvBioEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/etUsernameEditProfile"
        app:layout_constraintStart_toStartOf="@id/ivProfile"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputBionameEditProfile"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/tvBioEditProfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:counterEnabled="true"
        app:counterMaxLength="150"
        android:paddingTop="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBionameEditProfile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingStart="0dp"
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:maxLength="150" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvJKEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/inputBionameEditProfile"
        app:layout_constraintStart_toStartOf="@id/ivProfile"/>

    <RadioGroup
        android:id="@+id/rgJenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvJKEditProfil"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rbLaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:text="Laki - laki"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/screen_margin"
            android:checked="true"
            android:textAppearance="@style/TextAppearance.Body2"/>

        <RadioButton
            android:id="@+id/rbPerempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/screen_margin"
            android:layout_margin="@dimen/medium_margin"
            android:textAppearance="@style/TextAppearance.Body2"/>

    </RadioGroup>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDateEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/rgJenisKelamin"
        app:layout_constraintStart_toStartOf="@id/ivProfile"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCalendarEditProfile"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_calendar"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateEditProfil"
        app:layout_constraintStart_toStartOf="@id/tvDateEditProfil"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvShowDateEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date :"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateEditProfil"
        app:layout_constraintStart_toEndOf="@id/ivCalendarEditProfile"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerEditProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/ivCalendarEditProfile"
        app:layout_constraintStart_toStartOf="@id/ivCalendarEditProfile"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDateEditProfile"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:fontFamily="@font/roboto_regular"
        android:text="Pilih Tanggal"
        android:textColor="@color/primary50"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateEditProfil"
        app:layout_constraintBottom_toBottomOf="@id/dividerEditProfile"
        app:strokeColor="@color/primary50"
        app:strokeWidth="1dp"
        tools:ignore="TextSizeCheck"
        android:textAllCaps="false"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Simpan"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:layout_marginVertical="@dimen/screen_margin"
        android:layout_marginHorizontal="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@id/btnDateEditProfile"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>