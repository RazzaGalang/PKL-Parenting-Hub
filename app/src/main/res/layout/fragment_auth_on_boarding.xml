<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.AuthOnBoardingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/onBoardingHeaderIllustration"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_wave_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/onBoardingMainIllustration"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingHorizontal="@dimen/large_margin"
            android:src="@drawable/img_auth_on_boarding_main_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingHeaderIllustration" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/onBoardingTitleText"
            android:textAppearance="@style/TextAppearance.Title1"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:text="Parenting Hub"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingMainIllustration" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/onBoardingContentText"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/large_margin"
            android:paddingVertical="@dimen/screen_margin"
            android:text="Cari informasi seputar parenting dan turut berbagi tentang dunia parenting kepada orang tua di seluruh dunia"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingTitleText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onBoardingButtonContinue"
            android:textAppearance="@style/TextAppearance.Button"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_margin"
            android:paddingVertical="12dp"
            android:text="Mulai Sekarang, Parents!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingContentText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>